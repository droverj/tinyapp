<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
      
      <% if(userDatabase[user]) { %>
        </div>
        <div class="" .text-dark">
          <label for="user">Signed in as: <%= userDatabase[user].email %></label>
        </div>
        </div>
        
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group mb-2">
            <button type="submit" class="btn btn-success">Logout</button>
          </div>
        </form>
        
        <% } else { %>
          </div>
          <form class="form-inline" action="/login" method="POST">
            <div class="form-group mb-2">
              <input
                class="form-control"
                type="text"
                name="username"
                placeholder="enter email"
                style="width: 300px; margin: 1em"
              />
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>
          <% } %>
      
    </div>
  </nav>
</header>